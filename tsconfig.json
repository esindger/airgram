{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "lib": ["esnext", "dom"]
  },
  "exclude": [
    "packages/*/dist/**"
  ]
}
